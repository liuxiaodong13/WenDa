<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_original_qs_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/answer_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="原问题:"/>

    <LinearLayout
        android:id="@+id/ll_question_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:clickable="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_question_author_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <liuxiaodong.neusoft.edu.cn.wenda.ui.UserIconView
                android:id="@+id/civ_question_author_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                />

            <TextView
                android:id="@+id/tv_question_author_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="admin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:layout_marginLeft="10sp"
                android:maxLines="3"
                android:text="fsdafdasfdsafdasf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_record_info"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:text="有语音"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_question_pics_info"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=""/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>